<div class="card-container">
  <% @cocktails.each do |ck| %>

    <div class="cocktail-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
       url('<%= cl_image_path ck.photo, crop: :fill %>')">
      <h4><%= ck.name %></h4>
      <ul>
        <% ck.doses.each do |dose| %>
          <li><%= dose.ingredient.name %></li>
        <% end %>
      </ul>
      <%# avg_rating = ck.ratings.count.zero? ? "No rating" : (ck.ratings.sum / ck.ratings.count).to_s + " Stars"%>
      <p><%= 0 %></p>
      <%= link_to '<i class="far fa-trash-alt"></i>'.html_safe, cocktail_path(ck), method: :delete, class: "delete" %>
      <%= link_to cocktail_path(ck), class: "covering" do %>
      <% end %>
    </div>
  <% end %>
</div>

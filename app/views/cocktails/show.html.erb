<h2><%= @cocktail.name %></h2>

<div class="show-ingredients">
  <h2>Ingredients</h2>
  <ul>
    <% @cocktail.doses.each do |dose| %>
    <li><%= dose.ingredient.name %> (<%= dose.description %>) <%= link_to "(-)", dose_path(dose), method: "delete" %></li>
    <% end %>
  </ul>
  <br>
  <div class="form-inline">
    <%= simple_form_for [@cocktail, @dose] do |f| %>
      <%= f.association :ingredient, class: "form-control" %>
      <%= f.input :description, class: "form-control" %>
      <%= f.submit class: "btn btn-xs btn-default" %>
    <% end %>
  </div>
</div>
<br>

<div class="show-reviews">
  <h2>Reviews</h2>
  <ul>
    <% @cocktail.reviews.each do |review| %>
    <li><%= review.rating %></li>
    <% end %>
  </ul>
  <div class="form-inline">
    <%= simple_form_for [@cocktail, @review] do |f| %>
      <%= f.input :rating %>
      <%= f.submit class: "btn btn-xs btn-default" %>
    <% end %>
  </div>
</div>
<br>

<%= link_to "< Back", cocktails_path %>
